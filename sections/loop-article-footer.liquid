{{ 'loop-article-footer.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  <div class="loop-article-footer" style="background-color: {{ section.settings.color_scheme }}">
  <div class="prev-article laf-part"><a style="text-decoration: none; color: inherit;" class="article-nav-link" href="{{ blog.previous_article }}">Previous Article</a></div>
  <div class="social-media-share laf-part">Share
  	<a target="_blank" rel="noopener" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="social-sharing__link link list-social__link" title="{{ 'general.social.alt_text.share_on_facebook' | t }}">
      {%- render 'icon-facebook' -%}
    </a>
    <a target="_blank" rel="noopener" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="social-sharing__link link list-social__link" title="{{ 'general.social.alt_text.share_on_twitter' | t }}">
      {%- render 'icon-twitter' -%}
    </a>
    <a target="_blank" rel="noopener" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" class="social-sharing__link link list-social__link" title="{{ 'general.social.alt_text.share_on_pinterest' | t }}">
      {%- render 'icon-pinterest' -%}
    </a>
  </div>
  <div class="next-article laf-part"><a style="text-decoration: none; color: inherit;" class="article-nav-link" href="{{ blog.next_article }}">Next Article</a></div>
  </div>
  </div>
  

{% schema %}
  {
    "name": "Loop Article Footer",
    "settings": [
		{
      "type": "color",
      "id": "color_scheme",
      "label": "Background Color",
      "default": "#ffffff"
    }
	],
	"presets": [
		{
			"name": "Loop Article Footer"
		}
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

