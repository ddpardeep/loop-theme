{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{%- liquid
  assign current_variant = product.selected_or_first_available_variant

  assign product_zoom_size = '1800x1800'
  assign product_image_size = '620x'

  assign enableHistory = true
  if isModal
    assign enableHistory = false
  endif

  case image_container_width
    when 'small'
      assign product_image_width = 'medium-up--two-fifths'
      assign product_description_width = 'medium-up--three-fifths'
      assign product_image_size = '480x'
    when 'medium'
      assign product_image_width = 'medium-up--one-half'
      assign product_description_width = 'medium-up--one-half'
      assign product_image_size = '620x'
    when 'large'
      assign product_image_width = 'medium-up--three-fifths'
      assign product_description_width = 'medium-up--two-fifths'
      assign product_image_size = '740x'
  endcase

  assign text_color = section.settings.text_color
-%}

<style>
  .no-disp{
    display:none;
  }
  #hero-img-desktop-{{ section.id }}{
    top: auto;
    bottom: auto;
    height: 100%;
    max-height: 540px;
    overflow: hidden;
  }
  
  #hero-img-desktop-{{ section.id }} div {
  	height: 100%;
  }
  #hero-img-desktop-{{ section.id }} img.slick-slide {
  	height: 100%;
    object-fit: contain;
  }
  #hero-img-desktop-{{ section.id }} button.slick-next {
    top: auto;
    bottom: 0;
    right: calc( 50% - 100px );
    z-index: 1;
  }
  #hero-img-desktop-{{ section.id }} button.slick-prev {
    top: auto;
    bottom: 0;
    left: calc( 50% - 100px );
    z-index: 1;
  }
  
  #hero-img-desktop-{{ section.id }} button.slick-next::after, #hero-img-desktop-{{ section.id }} button.slick-prev::after {
    content: '';
    background-color: #000000;
    border-radius: 50%;
    position: absolute;
    left: 4px;
    top: 4px;
    width: 60%;
    height: 60%;
    z-index: -1;
  }
  #hero-img-desktop-{{ section.id }} .slick-prev:before {
  	opacity: 1;
  }
  #hero-img-desktop-{{ section.id }} .slick-next:before {
  	opacity: 1;
  }
  #hero-img-desktop-{{ section.id }} .slick-dots {
    bottom: 10px;
  }
  #ProductSection-{{ section_id }} .page-width, .product-single__title-wrapper-mobile {
    background-size: cover;
    background-position: bottom;
    background-repeat: no-repeat;
    position: relative;
  }
  label.v-swatch.featured-product-hero {
    font-size: 1.4rem;
    letter-spacing: .1rem;
    text-align: center;
    transition: border var(--duration-short) ease;
      cursor: pointer;
      position: relative;
      display: inline-block!important;
      line-height: 1!important;
      font-weight: 400;
      padding: 15px 18px!important;
      margin: 0 6px 12px 0!important;
      font-style: normal;
      text-transform: none;
      border-radius: 100px!important;
      color: #000;
      background-color: transparent;
      height: 40px;
      width: 40px;
      border: 0!important;
      }
  
  .h1.product-single__title.no-m {
    margin: 0;
  }
  .h1.product-single__title-mobile {
    position: absolute;
    bottom: 120px;
    text-align: center;
    width: 100%;
    color: #fff;
  }
  @media only screen and (max-width:749px){
    
  #hero-img-desktop-{{ section.id }}{
    position: relative;
    min-height: 75vw;
    max-height: 300px;
  }
  
  .featured-product-hero h1.product-single__title,.no-m {
    display: none;
  }

  .product-single__title-wrapper-mobile {
    background-image: url({{ section.settings.background_mobile | img_url: 'master'}});
    min-height: 80vh;
    background-position-y: 35%;
  }

  {% if text_color == 'light' %}
  .featured-product-hero .variant__label {
    color: #000;
  }
  {% endif %}
    
  
  label.v-swatch.featured-product-hero {
    padding: 15px 15px!important;
      margin: 0 6px 6px 0!important;
      height: 20px;
      width: 20px;
      }
    
}

@media only screen and (min-width:750px){
  .product-single__title-wrapper-mobile {
    display:none;
  }
  
  #ProductSection-{{ section_id }} .page-width, .product-single__title-wrapper-mobile {
    {% comment %}height: 81vh;{% endcomment %}
